    "isPalindrome :: String -> Bool\n",
    "isPalindrome word = isEq ha hb\n",
    "  where\n",
    "    lh = length word `div` 2\n",
    "    (ha, bs) = splitAt lh word\n",
    "    hb = take lh $ reverse bs\n",
    "    isEq [] [] = True\n",
    "    isEq (a:xs) (b:ys) = a == b && isEq xs ys"
   ]
  }
